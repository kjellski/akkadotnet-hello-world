<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="akka"
                 type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
    </configSections>

    <akka>
        <hocon>
            <![CDATA[
          akka {
            log-config-on-start = on
            stdout-loglevel = INFO
            loglevel = ERROR
            actor {
              debug {
                  receive = on
                  autoreceive = on
                  lifecycle = on
                  event-stream = on
                  unhandled = on
              }
            }
          }
      ]]>
        </hocon>
    </akka>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>